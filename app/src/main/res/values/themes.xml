<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.VkBookAndroid" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        
        <!-- Компактные кнопки по умолчанию -->
        <item name="materialButtonStyle">@style/Widget.App.Button</item>
        <item name="android:buttonStyle">@style/Widget.App.Button</item>
    </style>

    <style name="Theme.VkBookAndroid" parent="Base.Theme.VkBookAndroid" />
    
    <!-- Тема для Splash Screen -->
    <style name="Theme.VkBookAndroid.Splash" parent="Theme.VkBookAndroid">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
    
    <!-- Компактный стиль кнопок -->
    <style name="Widget.App.Button" parent="Widget.Material3.Button">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
    </style>
    
    <!-- Компактный стиль для ToggleButton -->
    <style name="Widget.App.ToggleButton" parent="android:Widget.Material.Button.Toggle">
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:padding">2dp</item>
    </style>
</resources>