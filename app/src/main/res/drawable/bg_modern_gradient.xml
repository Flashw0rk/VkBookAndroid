<?xml version="1.0" encoding="utf-8"?>
<!-- Брутальная тема: насыщенный градиент -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Радужный градиент фона -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="45"
                android:startColor="#FFE5F5"
                android:centerColor="#F3E5F5"
                android:endColor="#E1F5FE" />
        </shape>
    </item>
    
    <!-- Радужные полосы (диагональные) -->
    <!-- Красная полоса -->
    <item
        android:top="50dp"
        android:left="-100dp"
        android:right="500dp"
        android:bottom="700dp">
        <rotate
            android:fromDegrees="45"
            android:pivotX="50%"
            android:pivotY="50%">
            <shape android:shape="rectangle">
                <solid android:color="#FF626215" />
            </shape>
        </rotate>
    </item>
    
    <!-- Оранжевая полоса -->
    <item
        android:top="150dp"
        android:left="-50dp"
        android:right="450dp"
        android:bottom="600dp">
        <rotate
            android:fromDegrees="45"
            android:pivotX="50%"
            android:pivotY="50%">
            <shape android:shape="rectangle">
                <solid android:color="#FF980018" />
            </shape>
        </rotate>
    </item>
    
    <!-- Желтая полоса -->
    <item
        android:top="250dp"
        android:left="0dp"
        android:right="400dp"
        android:bottom="500dp">
        <rotate
            android:fromDegrees="45"
            android:pivotX="50%"
            android:pivotY="50%">
            <shape android:shape="rectangle">
                <solid android:color="#FFEB3B1A" />
            </shape>
        </rotate>
    </item>
    
    <!-- Зеленая полоса -->
    <item
        android:top="350dp"
        android:left="50dp"
        android:right="350dp"
        android:bottom="400dp">
        <rotate
            android:fromDegrees="45"
            android:pivotX="50%"
            android:pivotY="50%">
            <shape android:shape="rectangle">
                <solid android:color="#4CAF5018" />
            </shape>
        </rotate>
    </item>
    
    <!-- Голубая полоса -->
    <item
        android:top="450dp"
        android:left="100dp"
        android:right="300dp"
        android:bottom="300dp">
        <rotate
            android:fromDegrees="45"
            android:pivotX="50%"
            android:pivotY="50%">
            <shape android:shape="rectangle">
                <solid android:color="#2196F320" />
            </shape>
        </rotate>
    </item>
    
    <!-- Синяя полоса -->
    <item
        android:top="550dp"
        android:left="150dp"
        android:right="250dp"
        android:bottom="200dp">
        <rotate
            android:fromDegrees="45"
            android:pivotX="50%"
            android:pivotY="50%">
            <shape android:shape="rectangle">
                <solid android:color="#3F51B518" />
            </shape>
        </rotate>
    </item>
    
    <!-- Фиолетовая полоса -->
    <item
        android:top="650dp"
        android:left="200dp"
        android:right="200dp"
        android:bottom="100dp">
        <rotate
            android:fromDegrees="45"
            android:pivotX="50%"
            android:pivotY="50%">
            <shape android:shape="rectangle">
                <solid android:color="#9C27B01C" />
            </shape>
        </rotate>
    </item>
    
</layer-list>
