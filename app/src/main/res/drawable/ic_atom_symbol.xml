<?xml version="1.0" encoding="utf-8"?>
<!-- Красивый символ атома (3D стиль) -->
<vector xmlns:android="http://schemas.android.com/apk/res/android"
    android:width="300dp"
    android:height="300dp"
    android:viewportWidth="300"
    android:viewportHeight="300">
    
    <!-- Внешняя орбита 1 (голубая, толстая) -->
    <path
        android:strokeColor="#0091D5"
        android:strokeWidth="8"
        android:fillColor="#00000000"
        android:pathData="M50,150 Q150,50 250,150 Q150,250 50,150 Z" />
    
    <!-- Внешняя орбита 2 (повернутая на 60°) -->
    <path
        android:strokeColor="#00C4FF"
        android:strokeWidth="7"
        android:fillColor="#00000000"
        android:pathData="M150,30 Q230,90 250,150 Q230,210 150,270 Q70,210 50,150 Q70,90 150,30 Z" />
    
    <!-- Внешняя орбита 3 (повернутая на -60°) -->
    <path
        android:strokeColor="#FF9800"
        android:strokeWidth="7"
        android:fillColor="#00000000"
        android:pathData="M150,30 Q70,90 50,150 Q70,210 150,270 Q230,210 250,150 Q230,90 150,30 Z" />
    
    <!-- ЯДРО АТОМА (центр с градиентом-эффектом) -->
    <!-- Внешний круг ядра (темный) -->
    <path
        android:fillColor="#01579B"
        android:pathData="M150,120 A30,30 0,1,1 150,180 A30,30 0,1,1 150,120 Z" />
    
    <!-- Средний круг ядра (голубой) -->
    <path
        android:fillColor="#0091D5"
        android:pathData="M150,130 A20,20 0,1,1 150,170 A20,20 0,1,1 150,130 Z" />
    
    <!-- Внутренний круг (светлый - блик) -->
    <path
        android:fillColor="#00C4FF"
        android:pathData="M150,135 A15,15 0,1,1 150,165 A15,15 0,1,1 150,135 Z" />
    
    <!-- Электрон 1 (на орбите 1, позиция 0°) -->
    <path
        android:fillColor="#FF9800"
        android:pathData="M250,140 A10,10 0,1,1 250,160 A10,10 0,1,1 250,140 Z" />
    
    <!-- Электрон 2 (на орбите 2, позиция 120°) -->
    <path
        android:fillColor="#FFC107"
        android:pathData="M95,215 A10,10 0,1,1 95,235 A10,10 0,1,1 95,215 Z" />
    
    <!-- Электрон 3 (на орбите 3, позиция 240°) -->
    <path
        android:fillColor="#00C4FF"
        android:pathData="M205,65 A10,10 0,1,1 205,85 A10,10 0,1,1 205,65 Z" />
    
    <!-- Энергетические частицы (маленькие точки вокруг) -->
    <path
        android:fillColor="#FFD54F"
        android:pathData="M180,100 A4,4 0,1,1 180,108 A4,4 0,1,1 180,100 Z" />
    
    <path
        android:fillColor="#4FC3F7"
        android:pathData="M120,200 A4,4 0,1,1 120,208 A4,4 0,1,1 120,200 Z" />
    
    <path
        android:fillColor="#FF6E40"
        android:pathData="M220,180 A4,4 0,1,1 220,188 A4,4 0,1,1 220,180 Z" />
    
    <path
        android:fillColor="#80D8FF"
        android:pathData="M80,120 A4,4 0,1,1 80,128 A4,4 0,1,1 80,120 Z" />
    
</vector>















