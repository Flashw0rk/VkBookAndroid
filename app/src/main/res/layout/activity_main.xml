<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <!-- Панель синхронизации -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="#F5F5F5"
        android:gravity="center_vertical"
        android:minHeight="48dp"
        android:maxHeight="48dp">

        <Button
            android:id="@+id/btnSync"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="Обновить базы"
            android:textSize="14sp"
            android:includeFontPadding="false"
            android:paddingHorizontal="10dp"
            android:paddingVertical="0dp"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:gravity="center"
            android:backgroundTint="#4CAF50"
            android:textColor="@android:color/white"
            android:soundEffectsEnabled="false" />

        <ImageButton
            android:id="@+id/btnSettings"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="8dp"
            android:backgroundTint="#2196F3"
            android:background="@drawable/scroll_button_background"
            android:src="@android:drawable/ic_menu_preferences"
            app:tint="@android:color/white"
            android:scaleType="centerInside"
            android:padding="6dp"
            android:contentDescription="Настройки сервера"
            android:soundEffectsEnabled="false" />

        <TextView
            android:id="@+id/tvSyncStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="4dp"
            android:text="Готов к обновлению"
            android:textSize="12sp"
            android:textColor="#666666"
            android:maxLines="3"
            android:ellipsize="end"
            android:gravity="center_vertical|start"
            android:minHeight="20dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:scrollHorizontally="false" />

        <TextView
            android:id="@+id/tvProgressPercent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:text="0%"
            android:textSize="12sp"
            android:textColor="#666666"
            android:visibility="gone"
            android:minWidth="32dp"
            android:gravity="center" />

        <ProgressBar
            android:id="@+id/progressSync"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="8dp"
            android:layout_weight="0.3"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:indeterminate="false"
            android:max="100"
            android:progress="0"
            android:visibility="gone" />

    </LinearLayout>

    <!-- Вкладки -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:minHeight="56dp"
        android:soundEffectsEnabled="false"
        app:tabMode="scrollable"
        app:tabGravity="start">
    </com.google.android.material.tabs.TabLayout>

    <!-- Контейнер для фрагментов -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>
