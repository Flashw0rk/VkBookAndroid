<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Узкая верхняя полоса интерфейса ~2 мм -->
    <View
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:background="#673AB7" />

    <!-- Панель синхронизации -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="#F5F5F5"
        android:gravity="center_vertical"
        android:minHeight="48dp">

        <Button
            android:id="@+id/btnSync"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Обновить базы"
            android:textSize="14sp"
            android:padding="8dp"
            android:backgroundTint="#4CAF50"
            android:textColor="@android:color/white"
            android:soundEffectsEnabled="false" />

        <Button
            android:id="@+id/btnSettings"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="⚙️"
            android:textSize="16sp"
            android:padding="8dp"
            android:layout_marginStart="8dp"
            android:backgroundTint="#2196F3"
            android:textColor="@android:color/white"
            android:soundEffectsEnabled="false" />

        <TextView
            android:id="@+id/tvSyncStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:text="Готов к обновлению"
            android:textSize="12sp"
            android:textColor="#666666" />

    </LinearLayout>

    <!-- Вкладки -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:minHeight="56dp"
        android:soundEffectsEnabled="false"
        app:tabMode="fixed"
        app:tabGravity="fill">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Сигналы БЩУ" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Арматура" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Схемы" />

    </com.google.android.material.tabs.TabLayout>

    <!-- Контейнер для фрагментов -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>
