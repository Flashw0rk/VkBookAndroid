<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/scroll_buttons_background"
    android:padding="6dp">

    <!-- Кнопка прокрутки к верху -->
    <ImageButton
        android:id="@+id/scroll_to_top_button"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/scroll_button_background"
        android:src="@drawable/ic_keyboard_arrow_up_24"
        android:tint="@android:color/white"
        android:scaleType="centerInside"
        android:padding="4dp"
        android:contentDescription="Прокрутить к верху"
        android:soundEffectsEnabled="false" />

    <!-- Кнопка прокрутки к низу -->
    <ImageButton
        android:id="@+id/scroll_to_bottom_button"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/scroll_button_background"
        android:src="@drawable/ic_keyboard_arrow_down_24"
        android:tint="@android:color/white"
        android:scaleType="centerInside"
        android:padding="4dp"
        android:contentDescription="Прокрутить к низу"
        android:soundEffectsEnabled="false" />

</LinearLayout>
