<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/search_background">

    <!-- Основная панель поиска -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp">

        <!-- SearchView -->
        <androidx.appcompat.widget.SearchView
            android:id="@+id/search_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:soundEffectsEnabled="false"
            app:iconifiedByDefault="false"
            app:queryHint="Поиск"
            app:searchHintIcon="@drawable/ic_search_24"
            app:searchIcon="@drawable/ic_search_24"
            app:closeIcon="@drawable/ic_close" />

        <!-- Кнопка голосового поиска -->
        <ImageButton
            android:id="@+id/voice_search_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Голосовой поиск"
            android:src="@drawable/ic_mic_24"
            android:soundEffectsEnabled="false"
            android:visibility="visible" />

    </LinearLayout>

    <!-- Панель статуса поиска -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="4dp">

        <!-- Индикатор загрузки -->
        <ProgressBar
            android:id="@+id/progress_bar"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginEnd="8dp"
            android:visibility="gone" />

        <!-- Счетчик результатов -->
        <TextView
            android:id="@+id/results_counter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"
            android:visibility="gone"
            android:text="Найдено: 0" />

    </LinearLayout>

    <!-- История поиска -->
    <LinearLayout
        android:id="@+id/history_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:elevation="4dp"
        android:visibility="gone">

        <!-- Заголовок истории -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:background="@color/light_gray">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Недавние поиски"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />

            <Button
                android:id="@+id/clear_history_button"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="Очистить"
                android:textSize="12sp"
                android:textColor="@color/colorPrimary"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:padding="8dp" />

        </LinearLayout>

        <!-- Список истории -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/history_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="200dp"
            android:scrollbars="vertical" />

    </LinearLayout>

</LinearLayout>


