<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="8dp"
    android:paddingEnd="8dp"
    android:paddingTop="8dp"
    android:paddingBottom="0dp">

    <!-- Кнопка для разворачивания/сворачивания календаря -->
    <TextView
        android:id="@+id/btnToggleCalendar"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:text="▼"/>

    <!-- Календарная шкала: месяц (7 колонок), компактная -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerCalendar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:overScrollMode="never"
        android:layout_marginBottom="4dp"/>

    <!-- Панель управления с двумя кнопками -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp">

        <ToggleButton
            android:id="@+id/btnEditMode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="2dp"
            android:textSize="11sp"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:padding="4dp"
            android:textColor="@android:color/white"
            android:textOn="Редактирование: ВКЛ"
            android:textOff="Редактирование: ВЫКЛ"
            style="@style/Widget.App.ToggleButton"/>

        <ToggleButton
            android:id="@+id/btnPersonalMode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="4dp"
            android:textSize="11sp"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:padding="4dp"
            android:textColor="@android:color/white"
            android:textOn="Мои задачи"
            android:textOff="Служебные задачи"
            style="@style/Widget.App.ToggleButton"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tvNow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:paddingTop="0dp"
        android:paddingBottom="6dp"/>

    <!-- Шкала часов: 24 клетки, горизонтальный список -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerHours"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:overScrollMode="never"
        android:paddingBottom="8dp"/>

    <!-- Таблица задач: описание | время | дата/правило -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:overScrollMode="never">
        
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerTasks"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:overScrollMode="never"/>
    
    </HorizontalScrollView>

</LinearLayout>


