<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Общий HorizontalScrollView для всей таблицы -->
    <HorizontalScrollView
        android:id="@+id/tableContainerScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Заголовок таблицы -->
            <LinearLayout
                android:id="@+id/tableHeaderLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#f0f0f0"
                android:orientation="horizontal">

                <!-- TextViews заголовков будут добавляться динамически в SignalsFragment -->

            </LinearLayout>

            <!-- RecyclerView для данных -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/signalsRecyclerView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

        </LinearLayout>

    </HorizontalScrollView>

</LinearLayout> 