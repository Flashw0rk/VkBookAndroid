<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f5f5f5">

    <!-- Заголовок с навигацией по годам -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:paddingTop="4dp"
        android:paddingBottom="1dp"
        android:background="#ffffff"
        android:elevation="2dp"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/btnPrevYear"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:contentDescription="Предыдущий год"
            android:background="@drawable/scroll_button_background"
            android:padding="4dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_arrow_left"
            android:soundEffectsEnabled="false"
            android:translationY="-1.5dp" />

        <Button
            android:id="@+id/btnToday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2mm"
            android:text="Сегодня"
            android:textSize="16sp"
            android:minWidth="72dp"
            android:minHeight="0dp"
            android:includeFontPadding="false"
            android:gravity="center"
            android:translationY="-2.3dp" />


        <TextView
            android:id="@+id/yearTextView"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="0mm"
            android:layout_marginEnd="2mm"
            android:layout_weight="1"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="2025"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#333333" />

        <ImageButton
            android:id="@+id/btnNextYear2"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="2mm"
            android:contentDescription="Следующий год"
            android:background="@drawable/scroll_button_background"
            android:padding="4dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_arrow_right"
            android:soundEffectsEnabled="false"
            android:translationY="-1.5dp" />

        <Button
            android:id="@+id/btnZoomOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2mm"
            android:text="-"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:minWidth="36dp"
            android:minHeight="0dp"
            android:includeFontPadding="false"
            android:gravity="center"
            android:translationY="-1.5dp" />

        <Button
            android:id="@+id/btnZoomIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2mm"
            android:text="+"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:minWidth="36dp"
            android:minHeight="0dp"
            android:includeFontPadding="false"
            android:gravity="center"
            android:translationY="-1.5dp" />

    </LinearLayout>

    <!-- Календарь с графиком смен -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <HorizontalScrollView
            android:id="@+id/horizontalScrollView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scrollbars="horizontal">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/calendarRecyclerView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scrollbars="vertical"
                android:clipToPadding="false"
                android:padding="8dp" />

        </HorizontalScrollView>

    </androidx.core.widget.NestedScrollView>

    <!-- Удалили подсказку про заметки -->

</LinearLayout>

